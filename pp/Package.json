{
  "name": "plateforme-analyse-semantique",
  "version": "1.0.0",
  "description": "Plateforme d'analyse sémantique avancée pour avis clients avec IA",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "node server.js",
    "install-all": "npm install && cd frontend && npm install",
    "build-frontend": "cd frontend && npm run build && npm run export",
    "deploy": "npm run build-frontend && node server.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "papaparse": "^5.4.1",
    "xlsx": "^0.18.5",
    "@huggingface/transformers": "^2.17.2",
    "pdfkit": "^0.14.0",
    "exceljs": "^4.4.0",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "sentiment-analysis",
    "nlp",
    "ai",
    "customer-feedback",
    "text-analysis",
    "machine-learning",
    "javascript",
    "nodejs",
    "nextjs"
  ],
  "author": "Plateforme d'Analyse Sémantique",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/votre-username/plateforme-analyse-semantique.git"
  },
  "bugs": {
    "url": "https://github.com/votre-username/plateforme-analyse-semantique/issues"
  },
  "homepage": "https://github.com/votre-username/plateforme-analyse-semantique#readme"
}